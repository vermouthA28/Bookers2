<h2>User info</h2>


  <% if @book.image.attached? %>

    <%= image_tag book.image, size: "100x100"%>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>

  <% end %>






<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<table>
<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
    </tr>
  <% end %>
</tbody>

</table>

