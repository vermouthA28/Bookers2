<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
<table>
<thead>
  <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "Show", book_path(book) %></th>
    </tr>
  <% end %>
</thead>

</table>

