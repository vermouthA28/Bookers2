 <p id="notice"></p>
   <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">

             <h2>User info</h2>
              <% if @book.image.attached? %>

                <%= image_tag book.image, size: "100x100"%>
              <% else %>
                <%= image_tag 'default-image', size: "100x100" %>

              <% end %>

                <table class="table">
                  <tbody>
                    <tr></tr>
                    <tr>
                      <th>name</th>
                      <th><%= @user.name %></th>
                    </tr>
                   <tr>
                      <th>introduction</th>
                      <th><%= @user.introduction %></th>
                   </tr>
                  </tbody>
                </table>

              <div class="row">
               <th>
                 <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block" do %>
                   <i class="fa-solid fa-user-gear"></i>
                 <% end %>
               </th>
              </div>

            <h2 class="mt-3">New book</h2>
              <!-- form_with部分 -->
              <%= form_with model: Book.new do |f| %>
                <h4>Title</h4>
              <%= f.text_field :title %>

                <h4>Opinion</h4>
              <%= f.text_area :body %>

              <%= f.submit 'Create Book',class:"btn btn-success" %>
            <% end %>
      </div>

  <div class="col-md-8 offset-md-1">

    <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            
          </tr>
        </thead>
        
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <th><%= link_to "Show", book_path(book) %></th>
          <% end %>
        </tbody>
      </table>
  </div>

     </div>
   </div>



