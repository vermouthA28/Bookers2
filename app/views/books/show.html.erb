   <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">

         <%= render 'book',book:@book,user:@user %>
              
      </div>

  <div class="col-md-8 offset-md-1">

    <h2>Book detail</h2>
      <table class="table">

        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= book.title %></td>
