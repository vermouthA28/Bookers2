<%= flash[:notice] %>
  <p id="notice"></p>
     <div class="container px-5 px-sm-0">
       <div class="row">
        <div class="col-md-3">

           <%= render 'book',book:@book_new,user:@user %>

        </div>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
        <table class="table">

          <tbody>
            <tr>

              <td><%= image_tag @book.user.get_image(100,100) %></td>
              <td><%= link_to @user.name,user_path(@book.user.id) %></td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>


                <% if @book.user == current_user %>

              <td><%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>
               edit<% end %></td>


              <td><%= link_to book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger" do %>
               destroy<% end %></td>


              <% end %>
            </tr>
          </tbody>
        </table>
    </div>

       </div>
     </div>
