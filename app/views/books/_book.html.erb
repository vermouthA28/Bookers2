    <h2>User info</h2>
              <% if book.image.attached? %>

                <%= image_tag book.image, size: "100x100"%>
              <% else %>
                <%= image_tag 'default-image', size: "100x100" %>

              <% end %>

                <table class="table">
                  <tbody>
                    <tr></tr>
                    <tr>
                      <th>name</th>
                      <th><%= user.name %></th>
                    </tr>
                   <tr>
                      <th>introduction</th>
                      <th><%= user.introduction %></th>
                   </tr>
                  </tbody>
                </table>

              <div class="row">
               <th>
                 <%= link_to edit_user_path(user),class:"btn btn-outline-secondary btn-block" do %>
                   <i class="fa-solid fa-user-gear"></i>
                 <% end %>
               </th>
              </div>

            <h2 class="mt-3">New book</h2>

              <!-- form_with部分 -->
              <%= form_with model: Book.new do |f| %>
              <div class="form-group">
                <label for="book-title">Title</label>
                <input class="form-control book_title" type="string" name="book[title]" id="book_title">
              </div>

              <div class="form-group">
                <label for="book_body">Opinion</label>
                <textarea class="form-control book_body" type="text" name="book[body]" id="book_body"></textarea>
              </div>


              <div class="form-group">
                <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
              </div>

              <% end %>