
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

        <h2>User info</h2>
          <%= form_with model: @user, url: user_path(@user.id),method: :patch do |f| %>
            <div class="form-group">
              <label for="user_name">Name</label>
              <%= f.text_field :name, autofocus: true, class: "form-control name" %>
            </div>

            <div class="form-group">
              <label for="user_image(100,100)">Image</label>
              <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file user_image(100,100)" %>
              </div>

            <div class="form-group">
              <label for="user_introduction">Introduction</label>

              <%= f.text_area :introduction, class: "form-control introduction" %>
            </div>

            <div class="form-group">
              <%= f.submit "Update User", class: "btn btn-secondary" %>
            </div>



            <% end %>
      </div>
    </div>
  </div>