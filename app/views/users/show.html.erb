<%= flash[:notice] %>

 <p id="notice"></p>
   <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">

         <%= render 'books/book',book:@book,user:@user %>

      </div>

  <div class="col-md-8 offset-md-1">

    <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>

          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= link_to user_path do %>
              <%= image_tag book.user.get_image(100,100) %>
              <% end %>
            </td>

            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <th></th>
          <% end %>
        </tbody>
      </table>

  </div>


     </div>
   </div>